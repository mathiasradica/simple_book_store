@model ProductViewModel

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Category.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10">
            @Model.Product.Price.ToString("c"))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.PriceOnSale)
        </dt>
        <dd class="col-sm-10">
            @Model.Product.PriceOnSale.ToString("c"))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.IsProductOfTheWeek)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.IsProductOfTheWeek)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.IsOnSale)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.IsOnSale)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ImageUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ImageThumbnailUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ImageThumbnailUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.IsOnFrontPage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.IsOnFrontPage)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" name="id" value="@Model.Product.ProductId" />
        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="@Model.ReturnUrl">Back</a>
    </form>
</div>
